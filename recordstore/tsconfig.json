{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "es2022"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "types": ["@react-three/fiber"]
    },
    "exclude": ["node_modules"],
    "include": ["."]
}
